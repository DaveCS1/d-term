<UserControl
	x:Class="UI.Wpf.Consoles.ConsoleOptionsPanelView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:local="clr-namespace:UI.Wpf.Consoles"
	mc:Ignorable="d"
	d:DesignWidth="375"
	d:DesignHeight="215"
>

	<Grid>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>

		<local:ConsoleOptionsListView
			DataContext="{Binding ConsoleOptionsListViewModel}"
			Grid.Column="0"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch" />

		<Rectangle
			Fill="{DynamicResource MaterialDesignDivider}"
			Width="1"
			VerticalAlignment="Stretch"
			Grid.Column="1"
			Margin="0 15 15 15"
			SnapsToDevicePixels="True" />

		<Button
			Command="{Binding ManageOptionsCommand}"
			Grid.Column="2"
			Style="{StaticResource MaterialDesignFloatingActionDarkButton}"
			ToolTip="Configure Consoles"
			ToolTipService.Placement="Center"
			ToolTipService.VerticalOffset="-50">
			<materialDesign:PackIcon Kind="Settings" Height="24" Width="24" />
		</Button>

	</Grid>

</UserControl>
