<UserControl
	x:Class="UI.Wpf.Consoles.ProcessInstancesArrangeView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
	xmlns:local="clr-namespace:UI.Wpf.Consoles"
	mc:Ignorable="d"
	d:DesignWidth="375"
	d:DesignHeight="375"
>

	<Grid>

		<ListBox SelectedIndex="0" SelectedItem="{Binding SelectedArrange}" Style="{StaticResource consolesArrangeToggleListBoxStyle}" ItemsSource="{Binding ArrangeOptions}">

			<ListBox.Resources>
				<DataTemplate DataType="{x:Type local:ArrangeOptionViewModel}">
					<materialDesign:PackIcon Kind="{Binding Icon}" Width="24" Height="24" />
				</DataTemplate>
			</ListBox.Resources>

			<ListBox.ItemContainerStyle>
				<Style TargetType="ListBoxItem" BasedOn="{StaticResource MaterialDesignToolToggleListBoxItem}">
					<Setter Property="ToolTip" Value="{Binding Description}" />
				</Style>
			</ListBox.ItemContainerStyle>

		</ListBox>

	</Grid>

</UserControl>
