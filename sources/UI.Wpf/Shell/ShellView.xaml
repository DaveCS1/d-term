<Window
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
	xmlns:consoles="clr-namespace:UI.Wpf.Consoles"
	xmlns:notebook="clr-namespace:UI.Wpf.Notebook"
	x:Class="UI.Wpf.Shell.ShellView"
	TextElement.FontSize="14"
	TextElement.FontWeight="Medium"
	TextOptions.TextFormattingMode="Ideal"
	TextOptions.TextRenderingMode="ClearType"
	TextElement.Foreground="{DynamicResource MaterialDesignBody}"
	Background="{DynamicResource MaterialDesignPaper}"
	FontFamily="{DynamicResource MaterialDesignFont}"
	WindowStartupLocation="CenterScreen"
	WindowState="Maximized"
	d:DesignWidth="1280"
	d:DesignHeight="800"
	mc:Ignorable="d"
	Title="dTerm"
	MinWidth="1280"
	MinHeight="800"
	x:Name="shellView"
>

	<Grid>

		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="375" />
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<!-- Notebook -->
		<StackPanel Grid.Column="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

			<Grid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">

				<Grid.RowDefinitions>
					<RowDefinition Height="*" />
					<RowDefinition Height="Auto" />
				</Grid.RowDefinitions>
				
				<notebook:NotebookWorkspace DataContext="{Binding NotebookWorkspaceViewModel}"
											Grid.Row="0"
											HorizontalAlignment="Stretch"
											VerticalAlignment="Stretch" />

				<materialDesign:Snackbar Grid.Row="1"
										 HorizontalAlignment="Center"
										 MessageQueue="{Binding MessageQueue}"
										 VerticalAlignment="Bottom"
										 x:Name="globalMessages" />

			</Grid>

		</StackPanel>

		<!---->
		<Border
			BorderBrush="{DynamicResource MaterialDesignDivider}"
			BorderThickness="1"
			Grid.Column="1" />

		<!-- Consoles -->
		<consoles:ConsolesWorkspaceView
			DataContext="{Binding ConsolesWorkspaceViewModel}"
			Grid.Column="2"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch" />

	</Grid>

</Window>
