<mahApps:MetroWindow
	x:Class="UI.Wpf.Processes.ConfigsView"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:dragablz="http://dragablz.net/winfx/xaml/dragablz"
	xmlns:reactiveui="http://reactiveui.net"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
	xmlns:mahApps="clr-namespace:MahApps.Metro.Controls;assembly=MahApps.Metro"
	xmlns:properties="clr-namespace:UI.Wpf.Properties"
	mc:Ignorable="d"
	MinWidth="800"
	MinHeight="600"
	Width="800"
	Height="600"
	ShowTitleBar="False"
	ShowInTaskbar="False"
	IsMinButtonEnabled="False"
	WindowTransitionsEnabled="False"
	WindowStartupLocation="CenterOwner"
>
	<Grid UseLayoutRounding="True">

		<reactiveui:ViewModelViewHost Margin="5" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" ViewModel="{Binding ProcessesManager}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

	</Grid>

</mahApps:MetroWindow>
